<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/truebBlack"
    android:orientation="vertical"
    tools:context=".NewAlert"
android:scrollbarStyle="insideInset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/truebBlack"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Nueva alerta"
            android:textColor="#2196F3"

            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/etLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/et_bg"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etTypeAlert"
                android:layout_width="308dp"
                android:layout_height="38dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#0000"
                android:ems="10"
                android:hint="Escribe una descipcion concisa"
                android:inputType="textPersonName"
                android:padding="20sp"
                android:textColor="#454545"
                android:textSize="17dp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                android:background="#0000"
                android:foregroundGravity="center"
                android:src="@drawable/icono_micro"
                android:backgroundTint="#0166E4"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/naPoliceBorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/et_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/naPolice"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/et_bg1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:src="@drawable/icono_enviar_alerta_policia" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/naRadarBorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/et_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/naRadar"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/et_bg2"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:src="@drawable/icono_enviar_alerta_radar_fijo" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/naAccidenteBorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/et_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/naAccidente"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/et_bg3"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:src="@drawable/icono_enviar_alerta_radar_movil" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/naAccidentBorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/et_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/naAccident"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/et_bg4"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:src="@drawable/icono_enviar_alerta_accidente" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/naTrafficBorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/et_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/naTraffic"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/et_bg5"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:src="@drawable/icono_enviar_alerta_atasco" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/naRadarMobilBorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/et_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/naRadarMobil"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/et_bg6"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:src="@drawable/icono_enviar_alerta_peligro" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/naAlertBorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/et_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/naInfo"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/et_bg7"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:src="@drawable/icono_enviar_alerta_info" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="UbicaciÃ³n"
                android:textColor="#6A6A6A" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="C. de la Rivera, 12"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_bg8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="25dp"
                android:text="Ubicar en el mapa"
                android:textColor="#8C8C8C" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#0000"
                android:src="@drawable/location" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btAddAlert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:text="Enviar Alerta"
        android:background="@drawable/et_bg"
        android:backgroundTint="#0166E3"
        />
</LinearLayout>